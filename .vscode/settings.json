{
    "python.pythonPath": ".local-env/bin/python",
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.enabled": true,
    "editor.formatOnSave": true,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": ".local-env/bin/black",
    // flake8 has a default line-length of 79, so we use that for black as well
    "python.formatting.blackArgs": [
        "--line-length",
        "79"
    ],
    "html.format.enable": true,
    "files.associations": {
        "**/*.html": "html",
        "**/templates/**/*.html": "django-html",
        "**/templates/**/*": "django-txt",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements"
    },
    "[typescript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2

    },
    "[javascript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "vetur.validation.template": false,
    "vetur.format.enable": false,
    "eslint.validate": ["javascript", "javascriptreact", "typescript", "vue"],
    "typescript.tsdk": "quasar-app/node_modules/typescript/lib",
    "vetur.experimental.templateInterpolationService": true,
    "cSpell.words": [
        "djangorestframework",
        "Graphene",
        "gunicorn",
        "pyproject",
        "pytest",
        "queryset",
        "simplejwt",
        "Î¼blog"
    ],
    "workbench.colorCustomizations": {
        "activityBar.background": "#0c2d86",
        "statusBar.background": "#333"
    }
}